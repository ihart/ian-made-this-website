.lead {
	font-size: 2em;
	@media screen and (min-width: 48em) {
		font-size: 3em;
	}
	@media screen and (min-width: 64em) {
		font-size: 4em;
	}
}


.asterix {
	display: none;
	.enhanced & {
		border-bottom: 1px solid light-grey;
		color: pink;
		cursor: pointer;
		display: inline-block;
		font-family: font-family-standout;
	}
	&:hover {
		border-color: 1px solid white;
	}
	&.is-active {
		color: light-grey;
	}
}


.fancy-amp {
	color: light-black;
	font-family: font-family-script;
	@media screen and (min-width: 30em) {
		font-size: 0.7em;
		vertical-align: middle;
	}
}


.click-reveal {
	.js & {
		display: inline;
		height: 0;
		overflow: hidden;
		width: 0;
		span {
			color: pink;
			display: inline-block;
			max-height: 0;
			overflow: hidden;
			max-width: 0;
		}
		&.is-active span {
			max-height: 100em;
			max-width: 100em;
			overflow: visible;
		}
	}
	.csstransforms3d & {
		span {
			opacity: 0;
			transform: scale(1.2);
			transition: color 0 linear 200ms, opacity 200ms, max-height 0 linear 200ms, max-width 0 linear 200ms, transform 200ms ease-out;
		}
		&.is-active span {
			color: black;
			opacity: 1;
			transform: scale(1);
			transition: color 5s linear 5s, opacity 200ms, max-height 0 linear 0ms, max-width 0 linear 0ms, transform 200ms ease-out;
		}	
	}
}