.content {
	ul,
	ol,
	dl,
	p {
		margin-bottom: 1em;
		&:last-child {
			margin-bottom: 0;
		}
	}
	ul,
	ol,
	dl {
		text-align: left;
		margin-left: 3em;
	}
	ul {
		li {
			list-style: square;
		}
	}
	ol {
		li {
			list-style: decimal;
		}
	}
	h1,
	.alpha,
	h2,
	.beta,
	h3,
	.gamma,
	h4,
	.delta  {
		margin-bottom: 0.5em;
	}
}
